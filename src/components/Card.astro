---
const { link, itemType, path } = Astro.props;

---
<li class="col-span-1 flex rounded-md shadow-lg ">
	<a href={path}>
		<div class="max-w-sm rounded overflow-hidden shadow-lg">
		<img class="object-cover h-48 w-96" src={link} alt="Sunset in the mountains">
			<div class="px-6 py-4">
				<div class="font-bold text-xl mb-2">{itemType} </div>
			</div>
		</div>
	</a>
</li>
